<% include partials/header %>

<div class="ui main text container segment">
    <h1 class="ui huge header">Edit - <%= blog.title %></h1>
    <form class="ui form" action="/blogs/<%= blog.id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label for="">Image URL</label>
            <input type="text" name="blog[image]" value="<%= blog.image %>">
        </div>
        <div class="field">
            <label for="">Post</label>
            <!-- <input type="text" name="blog[desc]" placeholder="Description"> -->
            <textarea name="blog[body]" id="" cols="30" rows="10"><%= blog.body %></textarea>
        </div>
        <button class="ui primary big button">Submit</button>
    </form>
</div>s