<% include partials/header %>
<div class="ui main text container segment">
        <h1 class="ui huge header"><%= blog.title %></h1>

    <div class="ui top attached">
        <div class="item">
            <img src="<%= blog.image %>" class="ui centered rounded image">
            <div class="content">
                <span><%= blog.created.toDateString() %></span>
            </div>
            <div class="description">
                <p><%- blog.body %></p>  
                <!-- The above line contains %- this will parse the HTML -->
                <a href="/blogs/<%= blog.id %>/edit" class="ui orange button">Edit</a>
                <form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
                    <button class="ui red button right" id="delete">Delete</button>
                </form>
            </div>
          
        </div>
    </div>
</div>

